snippet =
	<%= ${1} %>${2}
snippet -
	<%- ${1} -%>${2}
snippet t
	<%=t '${1}' %>${2}
snippet raw
	<%=raw ${1} %>${2}
snippet if
	<%- if ${1:cond} -%>
	  ${2}
	<%- end -%>${3}
snippet unless
	<%- unless ${1:cond} -%>
	  ${2}
	<%- end -%>${3}
snippet each
	<%- ${1:collection}.each do |${2:member}| -%>
	  ${3}
	<%- end -%>${4}
snippet form_for
	<% form_for ${1} do |f| %>
	  <%= f.error_messages %>
	  ${2}
	<% end %>
